{
    "name": "quantumtecnology/actions",
    "license": "MIT",
    "description": "Actions",
    "autoload": {
        "psr-4": {
            "QuantumTecnology\\Actions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Bruno Henrique da Costa",
            "email": "bhcosta90@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "orchestra/testbench": "^10.3",
        "laravel/pint": "^1.22",
        "larastan/larastan": "^3.4",
        "rector/rector": "^2.0",
        "pestphp/pest": "^3.8"
    },
    "scripts": {
        "format": [
            "vendor/bin/pint"
        ],
        "rector": [
            "vendor/bin/rector process"
        ],
        "stan": [
            "vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "test": [
            "vendor/bin/pest"
        ],
        "ci": [
            "@format",
            "@rector --dry-run",
            "@stan",
            "@test --parallel"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
